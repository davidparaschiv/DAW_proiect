@model LogInViewModel

@{
    ViewData["Title"] = "Showrank";
}

<div class="text-center">

    <img src="~/img/logo.png" alt="Showrank's logo" style="width:250px !important" />
    <h1 class="display-4">Showrank</h1>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-6">
                <hr class="my-5" />
                <p class="mb-3">Welcome! You can log in or register here</p>

                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <input class="form-control" asp-for="Email" placeholder="Email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="form-control" asp-for="Password" placeholder="Password" required />
                    </div>

                    <button type="submit" class="btn btn-primary">Log in</button>
                </form>
                <p class="mt-3"><a asp-area="" asp-controller="Profile" asp-action="Register">I don't have an account yet</a></p>
            </div>
        </div>
    </div>
</div>
